
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model FinalProject.Web.Areas.Admin.Models.DTO.RoleDTO.RoleDetails

<div class="bg-primary text-white p-1 m-1">
    <h2>Edit Role</h2>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    <h6 class="bg-info p-1 text-white">Add to @Model.Role.Name</h6>
    <table class="table table-bordered table-sm">
        @if (Model.NonMember.Count() == 0)
        {
            <tr>
                <td colspan="2">All User Are Member</td>
            </tr>
        }

        else
        {
            @foreach (var user in Model.NonMember)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdToAdd" value="@user.Id" />
                    </td>
                </tr>
            }
        }

    </table>

    <h6 class="bg-info p-1 text-white">Delete to @Model.Role.Name</h6>
    <table class="table table-bordered table-sm">
        @if (Model.Member.Count() == 0)
        {
            <tr>
                <td colspan="2">No User Are Member</td>
            </tr>
        }

        else
        {
            @foreach (var user in Model.Member)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdToDelete" value="@user.Id" />
                    </td>
                </tr>
            }
        }

    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>

