@model IEnumerable<FinalProject.Associate.DTO.MessageDTO>

@{
    ViewData["Title"] = "Message";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box bg-black">
                <div class="box-header with-border">
                    <h3 class="box-title">Inbox</h3>
                    <div class="box-tools pull-right">
                        <div class="has-feedback">
                            <input type="text" class="form-control input-sm" placeholder="Search Mail">
                            <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        </div>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body  no-padding">

                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <thead style="color:white">
                                <tr>
                                    <th>Sender</th>
                                    <th>Recipient</th>
                                    <th>Content</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody style="color:white">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="mailbox-name">@item.SenderUser</td>
                                        <td class="mailbox-name">@item.RecipientUser</td>
                                        <td class="mailbox-messages">
                                            @if (item.Content.Length > 20)
                                            {
                                                <p>@item.Content.Substring(0,20)</p><p>...</p>
                                            }
                                            else
                                            {
                                                @item.Content
                                            }

                                        </td>
                                    <td class="mailbox-date">@item.CreatedDate</td>
                                    <td>
                                        @if (User.Identity.Name == item.SenderUser.UserName)
                                        {
                                            <a class="btn-sm btn-warning" asp-action="ChatRoom" asp-route-userName="@item.RecipientUser.UserName">Details</a>
                                        }
                                        else
                                        {
                                            <a class="btn-sm btn-warning groupChat" asp-action="ChatRoom" asp-route-userName="@item.SenderUser.UserName">Details</a>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
